    <div class="bg-white my-auto col-8 offset-2 shadow p-3  bg-body rounded">
            <h1 class="text-center mt-3">Add New Person's Information</h1>

            <!-- Form -->

            <form class="row g-3 needs-validation m-3" action="/police/create/" method="POST"
                enctype="multipart/form-data" novalidate>
                <!-- Name -->
                <div class="col-md-12">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide Name
                    </div>
                </div>



                <!-- Gender -->
                <div class="col-md-6">
                    <label for="gender" class="form-label">Gender</label>
                    <input type="text" class="form-control" id="gender" name="gender" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide Gender
                    </div>
                </div>


                <!-- Age -->
                <div class="col-md-6">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" class="form-control" id="age" name="age" required>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide Age
                    </div>
                </div>

                <!-- image -->
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="file" class="form-control" id="image" name="image" required accept="image/*">
                    <div class="invalid-feedback">Please provide Image</div>
                </div>
                <!-- additionalDetails -->
                <div class="mb-3">
                    <label for="details" class="form-label">Details</label>
                    <textarea class="form-control" id="validationTextarea" id="details" name="details"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide Description or Details
                    </div>

                </div>

                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <a class="btn btn-warning" href="/police">&nbsp;Back&nbsp;</a>
                </div>
            </form>

        </div>